<section id="service" class = "admin-section">
  <div class="container">
    <div class="row">
      <div class="responsive-table">
        <table id="table_list"
          class="table table-striped table-bordered" cellspacing="0">
          <thead>
            <tr>
              <th class = "text-center"><%= t :title %></th>
              <th class = "text-center"><%= t :activities %></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td class = "text-center">
                  <%= category.name %>
                </td>
                <td class = "text-center">
                  <%= form_for [category, @lesson] do |f| %>
                    <%= f.hidden_field :category_id, value: category.id %>
                    <%= f.submit t(:bt_start), class: "btn btn-primary bt-resize" %>
                  <%end%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</section>
