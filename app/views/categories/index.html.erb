<section id="service" class = "admin-section">
  <div class="container">
    <div class="row">
      <div class="responsive-table">
        <table id="table_list"
          class="table table-striped table-bordered" cellspacing="0">
          <thead>
            <tr>
              <th class = "text-center"><%= t :title %></th>
              <th class = "text-center"><%= t :activities %></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td class = "text-center">
                  <%= category.name %>
                </td>
                <td class = "text-center">
                  <%= link_to content_tag(:span, t(:bt_start), class:
                    "span-font"), "#", class:
                    "glyphicon glyphicon-tasks btn btn-lg btn-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</section>
