<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:logo), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <% if signed_in? %>
          <li><%= link_to t(:home), @current_user, class:
            "glyphicon glyphicon-home" %></li>
          <%if current_user.is_admin? %>
            <li><%= link_to t(:categories), admin_categories_path, class:
              "glyphicon glyphicon-folder-open" %></li>
          <% else %>
            <li><%= link_to t(:categories), categories_path, class:
              "glyphicon glyphicon-folder-open" %></li>
          <% end %>
          <%if current_user.is_admin? %>
            <li><%= link_to t(:words), admin_words_path, class:
              "glyphicon glyphicon-list-alt" %></li>
          <% else %>
            <li><%= link_to t(:words), words_path, class:
              "glyphicon glyphicon-list-alt" %></li>
          <% end %>
          <%if current_user.is_admin? %>
            <li><%= link_to t(:users), admin_users_path, class:
              "glyphicon glyphicon-user" %></li>
          <% else %>
            <li><%= link_to t(:users), users_path, class:
              "glyphicon glyphicon-user" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile), current_user %></li>
              <li><%= link_to t(:setting), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:signout), signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:home), root_path, class:
          "glyphicon glyphicon-home" %></li>
          <li><%= link_to t(:signin), signin_path, class:
            "glyphicon glyphicon-log-in" %></li>
          <li><%= link_to t(:signup), signup_path, class:
            "glyphicon glyphicon-user" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
