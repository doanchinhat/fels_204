<div class="container fix-width">
  <%= form_tag words_path, method: :get, class: "form-inline fix-width" do %>
    <%= search_field_tag :search_word, params[:search_word],
      placeholder: t(:keyword), class: "form-control fix-width",
      html: {id: "summit_lesson"} %>
    <%= button_tag(type: "submit",
      class: "btn-primary form-control fix-width") do %>
      <span class="glyphicon glyphicon-search fix-width"></span>
    <% end %>
  <% end %>
</div>
