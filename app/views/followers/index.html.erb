<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.avatar.url %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(:view_profile), @user %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul >
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>
