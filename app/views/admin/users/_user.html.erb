<tr>
  <td class = "text-center"><%= link_to user.name, user %></td>
  <td class = "text-center"><%= user.email %></td>
  <td class = "text-center">
  <% if !current_user? user %>
    <%= link_to t(:bt_edit), edit_admin_user_path(user), class:
      "glyphicon glyphicon-edit btn btn-lg btn-primary" %>
    <%= link_to t(:bt_del), admin_user_path(user), method:
      :delete,remote: true, data: {confirm: t(:confirm)}, class:
      "glyphicon glyphicon-remove btn btn-lg btn-primary" %>
  <% else %>
    <%= link_to t(:bt_edit), edit_admin_user_path(user), class:
      "glyphicon glyphicon-edit btn btn-lg btn-primary disabled" %>
    <%= link_to t(:bt_del), admin_user_path(user), method:
      :delete,remote: true, data: {confirm: t(:confirm)}, class:
      "glyphicon glyphicon-remove btn btn-lg btn-primary disabled" %>
  <% end %>
  </td>
</tr>
